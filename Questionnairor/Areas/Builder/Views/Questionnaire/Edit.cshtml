@model QuestionnaireData.Models.Questionnaire

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<h4>Questionnaire</h4>
<hr />
@using (Html.BeginForm("Edit", "Questionnaire", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="Editor Left">
        @Html.LabelFor(m => m.Title)
    </div>
    <div class="Editor Right">
        @Html.EditorFor(m => m.Title)
    </div>
    <div class="Editor Left">
        @Html.LabelFor(m => m.Introduction)
    </div>
    <div class="Editor Right">
        @Html.TextAreaFor(m => m.Introduction)
    </div>
    <br />
    <input type="submit" value="Edit Questionnaire" formaction="@Url.Action("Edit", "Questionnaire", new { @Model.Id, @Model.Title, @Model.Introduction })" />
    <hr />
    <h4>Questions</h4>
    foreach (var question in Model.Questions)
    {
        @await Html.PartialAsync("QuestionPartialView", question)
    }
    <br />
    <div>
        <input type="submit" value="Add Question" formaction="@Url.Action("AddEmpty", "Question", new { Model.Id })" />
    </div>
}
<hr />
<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>

