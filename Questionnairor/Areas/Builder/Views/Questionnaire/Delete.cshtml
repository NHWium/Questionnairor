@model QuestionnaireData.Models.Questionnaire

@{
    ViewData["Title"] = "Edit";
}

<h2>Delete</h2>
<h4>Questionnaire</h4>
<hr />
@using (Html.BeginForm("Delete", "Questionnaire", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="Editor Left">
        @Html.LabelFor(m => m.Title)
    </div>
    <div class="Editor Right">
        @Html.EditorFor(m => m.Title, new { @readonly = "readonly" })
    </div>
    <div class="Editor Left">
        @Html.LabelFor(m => m.Introduction)
    </div>
    <div class="Editor Right">
        @Html.TextAreaFor(m => m.Introduction, new { @readonly = "readonly" })
    </div>
    <p>
        Please confirm permanent deletion of this questionnaire.
    </p>
    <input type="submit" value="Delete Questionnaire" formaction="@Url.Action("Delete", "Questionnaire", new { @Model.Id, confirm = true })" />
}
<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>

