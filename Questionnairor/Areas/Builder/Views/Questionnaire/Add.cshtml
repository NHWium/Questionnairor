@model Questionnairor.Models.Questionnaire

@{
    ViewData["Title"] = "Add";
}

<h2>Add</h2>
<h4>Questionnaire</h4>
<hr />
@using (Html.BeginForm("Add", "Questionnaire", FormMethod.Post))
{
    <div asp-validation-summary="ModelOnly" class="text-danger">
        @Html.HiddenFor(m => m.Id)
        <div class="Editor Left">
            @Html.LabelFor(m => m.Title)
        </div>
        <div class="Editor Right">
            @Html.EditorFor(m => m.Title)
            @Html.ValidationMessageFor(m => m.Title)
        </div>
        <div class="Editor Left">
            @Html.LabelFor(m => m.Introduction)
        </div>
        <div class="Editor Right">
            @Html.TextAreaFor(m => m.Introduction)
            @Html.ValidationMessageFor(m => m.Introduction)
        </div>
    </div>
    <br />
    <input type="submit" value="Add Questionnaire" formaction="@Url.Action("Add", "Questionnaire", new { @Model.Title, @Model.Introduction })" />
}
<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>

