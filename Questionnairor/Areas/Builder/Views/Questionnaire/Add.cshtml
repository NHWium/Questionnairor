@model Questionnairor.Models.Questionnaire

@{
    ViewData["Title"] = "Add";
}

<h2>Questionnaire</h2>
<h4>Add</h4>
<hr />
@using (Html.BeginForm("Create", "Questionnaire", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="Editor Left">
        @Html.LabelFor(m => m.Title)
    </div>
    <div class="Editor Right">
        @Html.EditorFor(m => m.Title)
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="Editor Left">
        @Html.LabelFor(m => m.Introduction)
    </div>
    <div class="Editor Right">
        @Html.TextAreaFor(m => m.Introduction)
        @Html.ValidationMessageFor(m => m.Introduction)
    </div>
    @Html.HiddenFor(m => m.Questions)
    <p>
        Add a new questionnaire. Replaces any existing questionnaires.
    </p>
    <div>
        <input type="submit" value="Add Questionnaire" />
        <a href="@Url.Action("Index", "Questionnaire")"><input type="button" value="Cancel Add" /></a>
    </div>
}
<hr />
<div>
    @Html.ActionLink("Back", "Index", "Questionnaire")
</div>

