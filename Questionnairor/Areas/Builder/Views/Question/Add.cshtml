@model Questionnairor.Models.Question

@{
    ViewData["Title"] = "Add";
}

<div class="header">
    <h2>Question</h2>
    <h4>Add</h4>
    <hr />
</div>
@using (Html.BeginForm("Create", "Question", FormMethod.Post, new { @class = "center" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="editor left">
        @Html.LabelFor(m => m.Title)
    </div>
    <div class="editor right">
        @Html.EditorFor(m => m.Title)
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="editor left">
        @Html.LabelFor(m => m.Text)
    </div>
    <div class="editor right">
        @Html.TextAreaFor(m => m.Text)
        @Html.ValidationMessageFor(m => m.Text)
    </div>
    @Html.HiddenFor(m => m.Choices)
    @Html.HiddenFor(m => m.Answer)
    <p>
        Add a question to the questionnaire. Afterwards you can add multiple choices.
    </p>
    <div>
        <input type="submit" value="Add Question" />
        <a href="@Url.Action("Edit", "Questionnaire")"><input type="button" value="Cancel Add" /></a>
    </div>
}
<environment include="Development">
    @Html.Hidden("DebugJson", Model.ToJson(Newtonsoft.Json.Formatting.Indented))
</environment>
@await Html.PartialAsync("FooterPartialView", new FooterModel(null, null))

